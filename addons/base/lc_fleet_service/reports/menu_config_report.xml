            report_type="qweb-pdf"
            name="lc_fleet_service.lc_fleet_service_quotation_report"
            file="lc_fleet_service.lc_fleet_service_quotation_report"
            paperformat="paperformat_lowmargin"
        />

        <report
            id="lc_fleet_service_reports"
