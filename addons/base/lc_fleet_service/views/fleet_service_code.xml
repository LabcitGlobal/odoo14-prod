<odoo>
  <data>
    
  <!-- Bank Account -->
    
    <record model="ir.ui.view" id="lc_fleet_service_code_tree">
      <field name="name">Fleet Service Code Tree</field>
      <field name="model">lc.fleet.service.code</field>
      <field name="arch" type="xml">
        <tree string="Code">
          <field name="name"/>          
          <field name="note"/>          
          <field name="user_id" optional="show" widget="many2one_avatar_user"/>
          <field name="state" decoration-danger="state == 'disable'" decoration-success="state == 'enable'" widget="badge" optional="show"/>          
        </tree>
      </field>
    </record>
	
    <record model="ir.ui.view" id="lc_fleet_service_code_form">
      <field name="name">Fleet Service Code Form</field>
      <field name="model">lc.fleet.service.code</field>
      <field name="arch" type="xml">
      		<form string="Code">
              <header>
      		    	<button name="action_disable_fleet_code" id="action_disable_fleet_code" 
					      string="Disable" class="btn-primary" type="object"
					      attrs="{'invisible':['|', ('state','not in', ['enable']),('id','=',False)]}"/>
      		    	<button name="action_enable_fleet_code" type="object" string="Enable" 
					      attrs="{'invisible': ['|', ('state', 'in', ['enable']), ('id', '=', False)]}" groups="fleet.fleet_group_manager"/>
      				<field name="state"  widget="statusbar" statusbar_visible="enable,disable"/>
      			</header>      			
      			<sheet>
      				<group>
      		    	<field name="name"/>      		    		
                <field name="note"/>          
                <field name="user_id"/>          
      		    </group>          	      		    			
      			</sheet>
      		</form>        
      </field>
    </record>

    <!-- ir.sequence -->

    <record id="sequence_code" model="ir.sequence">
      <field name="name">Sequence Fleet Code</field>
      <field name="code">fleet.service.code</field>
      <field name="active">TRUE</field>
      <field name="prefix">LAB</field>
      <field name="suffix">/%(year)s</field>
      <field name="padding">3</field>
      <field name="number_next">1</field>
      <field name="number_increment">1</field>
      <field name="use_date_range">TRUE</field>
      <field name="range_reset">yearly</field>
    </record>
  
    <!-- end ir.sequence -->

	<record id="lc_fleet_service_code_action" model="ir.actions.act_window">
            <field name="name">Fleet Service Code</field>
            <field name="res_model">lc.fleet.service.code</field>
            <field name="view_mode">tree,form</field>
    </record>

  <menuitem id="menu_lc_fleet_service_code" parent="menu_lc_fleet_service" name="Service Code"
                  action="lc_fleet_service_code_action" sequence="20"/>

  </data>
</odoo>