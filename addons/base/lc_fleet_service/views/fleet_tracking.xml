<odoo>
  <data>
    
    <!-- Driver Expenses -->
    
    <record model="ir.ui.view" id="lc_fleet_tracking_tree">
      <field name="name">Fleet Tracking Tree</field>
      <field name="model">lc.fleet.tracking</field>
      <field name="arch" type="xml">
        <tree string="Tracking">
          <field name="service_id"/>
          <field name="date"/>
          <field name="name"/>
          <field name="localization"/>                              
          <field name="create_uid" string="User"/>          
        </tree>
      </field>
    </record>
	
    <record model="ir.ui.view" id="lc_fleet_tracking_form">
      <field name="name">Fleet Tracking Form</field>
      <field name="model">lc.fleet.tracking</field>
      <field name="arch" type="xml">
      		<form string="Expenses">
      			<sheet>
              <!-- <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
              </button> -->
      				<group>
      		    		<field name="service_id"/>
      		    		<field name="date"/>
                  <field name="localization"/>
      		    	</group>          	
      		    	<notebook>      		    		
      		    		<page string="Detail">
						        <group>    		
      		    				<field name="name"/>
      		    			</group>
      		    		</page>
                  <page string="Files">
						        <group>    		
      		    		    <field name="photo" widget="image"/>          		
      		    				<field name="file" widget="binary"/>
      		    			</group>
      		    		</page>          		          		
					</notebook>			
      			</sheet>
      		</form>        
      </field>
    </record>

	<record id="lc_fleet_tracking_action" model="ir.actions.act_window">
            <field name="name">Fleet Tracking</field>
            <field name="res_model">lc.fleet.tracking</field>
            <field name="view_mode">tree,form</field>
    </record>
	
	<menuitem id="menu_lc_fleet_tracking_contract" parent="menu_lc_fleet_driver_expenses" name="Tracking"
                  action="lc_fleet_tracking_action" sequence="1"/>

  </data>
</odoo>