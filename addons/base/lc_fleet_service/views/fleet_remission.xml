<odoo>
  <data>
    
    <!-- Remission -->
    
    <record model="ir.ui.view" id="lc_fleet_remission_tree">
      <field name="name">Fleet Remission Tree</field>
      <field name="model">lc.fleet.remission</field>
      <field name="arch" type="xml">
        <tree string="Referral List">          
          <field name="name"/>          
          <field name="date_today"/>          
        </tree>
      </field>
    </record>
	
    <record model="ir.ui.view" id="lc_fleet_remission_form">
      <field name="name">Fleet Remission Form</field>
      <field name="model">lc.fleet.remission</field>
      <field name="arch" type="xml">
      		<form string="Remissions">
      			<sheet>
      				<group>
      		    		<field name="name"/>
      		    		<field name="date_today"/>      		    		
      		    	</group>          	
      		    	<notebook>      		    		
      		    		<page string="Documents">
						        <group>           
          			    	<field name="remission_document_ids">
          			    		<tree string="Document" editable="bottom">          				
	          		    			<field name="document_type_id"/>
    	      		    			<field name="code"/>        	  					
    	      		    			<field name="quantity"/>        	  					
    	      		    			<field name="type"/>
                          <field name="file1" widget="binary"/>        	  					
                          <field name="file2" widget="binary"/>        	  					
                          <field name="file3" widget="binary"/>        	  					
          			    		</tree>
          			    	</field>
          			    </group>
      		    		</page>          		          		
					      </notebook>			
      			</sheet>
      		</form>        
      </field>
    </record>

	<record id="lc_fleet_remission_action" model="ir.actions.act_window">
            <field name="name">Fleet remission</field>
            <field name="res_model">lc.fleet.remission</field>
            <field name="view_mode">tree,form</field>
    </record>

	<!-- Document Type -->
    
    <record model="ir.ui.view" id="lc_fleet_remission_document_type_tree">
      <field name="name">Fleet Remission Document Type Tree</field>
      <field name="model">lc.fleet.remission.document.type</field>
      <field name="arch" type="xml">
        <tree string="Document Type">          
          <field name="name"/>                    
        </tree>
      </field>
    </record>
	
    <record model="ir.ui.view" id="lc_fleet_remission_document_type_form">
      <field name="name">Fleet Remission Document Type Form</field>
      <field name="model">lc.fleet.remission.document.type</field>
      <field name="arch" type="xml">
      		<form string="Document Type">      			
      			<sheet>
      				<group>      		    		
      		    		<field name="name"/>      		    		
      		    	</group>          	      		    			
      			</sheet>
      		</form>        
      </field>
    </record>

	<record id="lc_fleet_remission_document_type_action" model="ir.actions.act_window">
            <field name="name">Remission Document Type</field>
            <field name="res_model">lc.fleet.remission.document.type</field>
            <field name="view_mode">tree,form</field>
    </record>

	<menuitem id="menu_lc_fleet_remission" parent="menu_lc_fleet_service" name="Fleet Remissions"
                  action="lc_fleet_remission_action" sequence="2"/>

	<menuitem id="menu_lc_fleet_remission_document_type" parent="fleet.fleet_configuration" name="Document Type"
                  action="lc_fleet_remission_document_type_action" groups="base.group_no_one" sequence="20"/>

  </data>
</odoo>