<odoo>
  <data>  
    <record model="ir.ui.view" id="view_lccash_fleet_service_tree">      
      <field name="model">lccash.payment</field>
      <field name="inherit_id" ref="lccash.lccash_payment_view"/>
      <field name="arch" type="xml">      		
      		<xpath expr="//field[@name='name']" position="before">            	
          	<field name="fleet_service_id"/>
          </xpath>
      </field>
    </record>    
    
    <record model="ir.ui.view" id="view_lccash_fleet_service_form">      
      <field name="model">lccash.payment</field>
      <field name="inherit_id" ref="lccash.lccash_payment_form"/>
      <field name="arch" type="xml">      		
      		<xpath expr="//field[@name='name']" position="before">            	
          	<field name="fleet_service_id"/>
          </xpath>          
      </field>
    </record>    
  </data>
</odoo>