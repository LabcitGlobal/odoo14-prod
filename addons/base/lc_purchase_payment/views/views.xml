<odoo>
  <data>  
    <record model="ir.ui.view" id="view_purchase_order_payment_tree">      
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
      <field name="arch" type="xml">
      		<xpath expr="//tree" position="attributes">
      			<attribute name="decoration-success">amount_total==payment</attribute>      			      			
      			<attribute name="decoration-danger">amount_total&lt;0</attribute>
      		</xpath>
      		<xpath expr="//field[@name='amount_total']" position="after">            	
            	<field name="payment"/>
            </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="view_purchase_order_true_payment_tree">      
