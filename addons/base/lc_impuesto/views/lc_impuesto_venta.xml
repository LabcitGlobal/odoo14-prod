<odoo>
  <data>
    
    <!-- Factura Venta -->
    
    <record model="ir.ui.view" id="lc_impuesto_venta_tree">
      <field name="name">lc_impuesto_venta.tree</field>
      <field name="model">lc.impuesto.venta</field>
      <field name="arch" type="xml">
        <tree string="Datos de la Factura de Venta">          
          <field name="numero"/>
          <field name="talonario_id"/>
          <field name="fecha"/>          
          <field name="cliente"/>
          <field name="name"/>    
          <field name="nit"/>
          <field name="importe"/>          
          <field name="anulado"/>                                     
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="lc_impuesto_venta_form">
      <field name="name">lc_impuesto_venta.form</field>
      <field name="model">lc.impuesto.venta</field>
      <field name="arch" type="xml">
      <form string="Datos de la Factura de Venta">      	
      	<sheet>
      		<group>      			            		
              <field name="talonario_id"/>
              <field name="fecha"/>
              <field name="numero"/>
              <field name="cliente"/>
              <field name="name"/>    
              <field name="nit"/>
              <field name="importe"/>          
              <field name="anulado"/>
              <field name="active"/>
              <field name="foto" widget="image"/>
          </group>          	          	
      	</sheet>
      </form>        
      </field>
    </record>
        
    <!-- Acciones -->
    
    <record model="ir.actions.act_window" id="lc_impuesto_venta_action_window">
      <field name="name">Factura de Venta</field>
      <field name="res_model">lc.impuesto.venta</field>    
      <field name="view_mode">tree,form</field>            
    </record>
    
    <!-- actions -->
    
	  <menuitem name="Factura de Venta" id="lc_impuesto_menu_venta" parent="lc_impuesto.menu_root"
              action="lc_impuesto_venta_action_window"/>
    
  </data>
</odoo>