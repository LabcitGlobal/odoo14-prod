<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
		<template id="pos_print_image_128_template">
			<t t-foreach="docs" t-as="o">
    			<t t-call="web.html_container">        		
            		<t t-call="web.external_layout">
                		<div class="page">
                			<div class="oe_structure" style="font:14px Helvetica,Arial !important; "/>
                				<a2>                    		
                    			<div class="table">
                    				<div class="col-xs-12 text-center">
                        				<h2 t-esc="o.company_id.name"/>
                        				<!-- <div t-field="o.partner_id"
                            				t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": true, "phone_icons": true}'/>-->
                        				<a1><strong>Cliente:</strong> <span t-field="o.partner_id"/></a1><br/>
                        				<a1><strong>Usuario:</strong> <span t-field="o.user_id"/></a1><br/>           				
                        				<a1><strong>Fecha:</strong> <span t-field="o.date_order"/></a1><br/>
                        				<a1><strong>Telefonos:</strong> <span t-field="o.partner_id.mobile"/> - <span t-field="o.partner_id.phone"/></a1><br/>
                        				<a1><strong>Orden:</strong> <span t-field="o.name"/></a1>
                    				</div>
                				</div>
                				<div class="row">
                				</div>
                				<table class="table table-sm o_main_table">
                    				<thead>
                        				<tr>
                            				<th style="width:18%" class="text-right">Imagen</th>
                            				<th style="width:7%" class="text-right">Cant.</th>
	                            			<th style="width:55%">Descripcion</th>             
    	                        			<th class="text-right">Precio</th>
        	                    			<th class="text-right">Total</th>
            	            			</tr>
                	    			</thead>
                    				<tbody>
                        				<tr t-foreach="o.lines" t-as="line">
                        					<td>
                								<span t-field="line.product_id.image_128"
                      								t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
            								</td>
                        					<td class="text-right">
                                				<t t-if="o.state != 'cancel'">
                                    				<span t-field="line.qty"/>
                                				</t>
	                            			</td>
    	                        			<td><span t-field="line.product_id"/>
        	                    				<t t-if="line.line_note">
            	                					[<strong>Nota:<span t-field="line.line_note"/></strong>]
                	            				</t>
                    	        			</td>
                        	    			<td class="text-right">
                            					<span t-esc="'%.2f'%line['price_unit']" />
                            				</td>
                            				<td class="text-right">
                            					<span t-esc="'%.2f'%(line.price_subtotal)" />                                			
	                            			</td>
    	                    			</tr>
        	            			</tbody>                    			
            	    			</table>
                				<div class="table table-sm o_main_table">
                    				<div class="col-xs-12 pull-right">
                        				<table class="table table-condensed">
                            				<tr class="border-black">
                                				<td><strong>IVA</strong></td>
                                				<td class="text-right">
                                    				<strong t-esc="o.amount_tax"/>
                                				</td>
	                            			</tr>
    	                        			<tr>
        	                        			<td><strong>Total</strong></td>
            	                    			<td class="text-right">                                				
                	                    			<!--<strong t-esc="int(o.amount_total)"/>-->
                    	                			<strong t-esc="'%.2f'%(o.amount_total)"/>                                    			
                        	        			</td>
                            				</tr>                            				
                        				</table>                        				
                    				</div>
                				</div>
                				<div><p><strong>NOTA:</strong> <strong t-esc="o.note"/></p></div>                				
                			</a2>
                			<div class="footer">
        						<div class="text-center" style="border-top: 1px solid black;">        
						            <ul class="list-inline">
                						<li>Página: <span class="page"/>/<span class="topage"/></li>
                						<li>Teléfonos: <span t-field="res_company.phone"/><t t-if="res_company.website"> - Web: <span t-field="res_company.website"/></t></li>
            						</ul>
        						</div>
    						</div>                			
                		</div>                 		               		
            		</t>
        		</t>
    		</t>
		</template>
		
