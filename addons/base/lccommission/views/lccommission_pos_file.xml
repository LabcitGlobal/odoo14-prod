<odoo>
  <data>

    <record id="lccommission_posfile_view_tree" model="ir.ui.view">
      <field name="name">lccommission_posfile.tree</field>
      <field name="model">lccommission.posfile</field>
      <field name="arch" type="xml">
          <tree>
              <field name="create_date"/>
              <field name="name" />
              <field name="pos_id"/>              
              <field name="note"/>
          </tree>
      </field>
    </record>

    <record id="lccommission_posfile_view_form" model="ir.ui.view">
      <field name="name">lccommission_posfile.form</field>
      <field name="model">lccommission.posfile</field>
      <field name="arch" type="xml">
      <form string="Archivos de Boleta">      	
      	<sheet>
      		<group>
              <field name="name"/>
              <field name="pos_id"/>
              <field name="pos_photo1" widget="image"/>
              <field name="pos_photo2" widget="image"/>
              <field name="pos_photo3" widget="image"/>
              <field name="note"/>              
              <field name="active"/>             
          </group>          	          	
      	</sheet>
      </form>
      </field>
    </record>

    <record id='lccommission_posfile_action' model='ir.actions.act_window'>
      <field name="name">Comprobante de Pedidos</field>
      <field name="res_model">lccommission.posfile</field>      
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="lccommission_posfile_menu" parent="lccommission.file_menu" action="lccommission_posfile_action" sequence="10"/>

  </data>
</odoo>