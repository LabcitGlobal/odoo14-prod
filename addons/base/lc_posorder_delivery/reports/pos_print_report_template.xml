<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>		
		<template id="report_header_custom" inherit_id="lc_posreprint.pos_reprint_report_template">
            <xpath expr="//div[@class='row']" position="replace">
                <div class ="lc_shipping">       
					<t t-if="o.destiny">
						<table class="table table-sm o_main_table">
							<tr>
								<td><a1><strong>Transportadora:</strong> <span t-field="o.shipping_company"/></a1></td>
								<td><a1><strong>Destino:</strong> <span t-field="o.destiny"/></a1></td>
								<td><a1><strong>No. Cajas:</strong> <span t-field="o.box_quantity"/></a1></td>
							</tr>
							<tr>
								<td><a1><strong>Responsable:</strong> <span t-field="o.shipping_partner"/></a1></td>
								<td><a1><strong>Telefono:</strong> <span t-field="o.shipping_partner.mobile"/></a1></td>
								<td><a1><strong>Fecha de Envio:</strong> <span t-field="o.shipping_date"/></a1></td>
							</tr>
						</table>						
					</t>             					
                </div>
            </xpath>
        </template>
		<template id="pos_print_label_template">
			<t t-foreach="docs" t-as="o">
    			<t t-call="web.html_container">        		
            		<!-- <t t-call="web.external_layout"> -->
                		<div class="page" style="font-family: Arial, Helvetica, sans-serif !important; font-size: 130px !important; text-align: center; line-height: 150px;">
                				<a2>                    		
                    				<t t-if="o.destiny">
										<span t-field="o.shipping_partner"/>
										<strong style="font-size: 175px !important;"><span t-field="o.destiny"/></strong>
										<span t-field="o.shipping_partner.mobile"/>						
									</t>                				
                				</a2>							                			                			
                		</div>               		
            		<!-- </t> -->
        		</t>
    		</t>
		</template>         
    </data>
</odoo>

