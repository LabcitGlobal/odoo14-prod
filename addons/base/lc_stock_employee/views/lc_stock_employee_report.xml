<odoo>
  <data>        
    
    <record model="ir.ui.view" id="lc_stock_employee_print_report_form">
    	<field name="name">lc.stock.employee.report.form</field>
        <field name="model">lc_stock_employee_report</field>
        <field name="arch" type="xml">
        	<form>
            	<group>                	
                <field name="employee_id" string="Empleado"/>                    
              </group>
              <footer>
                <button name="print_stock_report" string="Imprimir" type="object" class="highlight"/>
                <button string="Cerrar" class="btn-primary" special="cancel"/>
              </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="lc_stock_employee_report_action_window">
    	<field name="name">Reporte de Stock de Empleado</field>
        <field name="res_model">lc_stock_employee_report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="view_type">form</field> -->
    </record>
           
    <menuitem name="Inventario" id="lc_stock_employee_report" parent="hr.menu_hr_root" />
    
    <menuitem name="Generar Stock por Empleado" id="lc_stock_employee_pdf_report" parent="lc_stock_employee_report"
              action="lc_stock_employee_report_action_window"/>

  </data>
</odoo>