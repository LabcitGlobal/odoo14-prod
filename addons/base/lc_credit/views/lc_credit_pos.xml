<odoo>
  <data>

    <record id="lc_credit_pos_view_tree" model="ir.ui.view">
      <field name="name">lc_credit_pos.tree</field>
      <field name="model">lc.credit.pos.view</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name" string="Ref. venta"/>
              <field name="pos_reference" string="Referencia del recibo"/>
              <field name="client" string="Cliente"/>
              <field name="date_order" string="Fecha de Pedido"/>
              <field name="seller" string="Vendedor"/>
              <field name="amount_total" string="Total"/>
              <field name="payment" string="Pagado"/>              
          </tree>
      </field>
    </record>

    <record id='lc_credit_pos_action' model='ir.actions.act_window'>
      <field name="name">Boletas no Cobradas</field>
      <field name="res_model">lc.credit.pos.view</field>      
      <field name="view_mode">tree</field>
    </record>

  </data>  
  <menuitem id="lc_credit_pos_menu" parent="lc_credit_menu" action="lc_credit_pos_action" sequence="9"/>
</odoo>