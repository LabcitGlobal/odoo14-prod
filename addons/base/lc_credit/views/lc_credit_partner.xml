<odoo>
  <data>

    <record id="lc_credit_partner_view_tree" model="ir.ui.view">
      <field name="name">lc_credit_partner.tree</field>
      <field name="model">lc.credit.partner.view</field>
      <field name="arch" type="xml">
          <tree>
              <field name="partner_id"/>              
              <field name="total"/>
              <field name="payment"/>
              <field name="pending"/>              
          </tree>
      </field>
    </record>

    <record id="lc_credit_partner_view_form" model="ir.ui.view">
      <field name="name">lc_credit_partner.form</field>
      <field name="model">lc.credit.partner.view</field>
      <field name="arch" type="xml">
      <form string="Datos de la Deuda">      	
      	<sheet>
      		<group>
              <field name="partner_id"/>                            
              <field name="total"/>
              <field name="payment"/>
              <field name="pending"/>              
          </group>          	          	
      	</sheet>
      </form>
      </field>
    </record>

    <record id='lc_credit_partner_action' model='ir.actions.act_window'>
      <field name="name">Deudas de Clientes</field>
      <field name="res_model">lc.credit.partner.view</field>      
      <field name="view_mode">tree,form</field>
    </record>

  </data>
  <menuitem id="lc_credit_menu" name="Creditos"  web_icon="lc_credit,static/description/credit.png"/>
  <menuitem id="lc_credit_partner_menu" parent="lc_credit_menu" action="lc_credit_partner_action" sequence="9"/>
</odoo>