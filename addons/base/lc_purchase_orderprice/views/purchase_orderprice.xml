<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="purchase_order_form">
    <field name="name">purchase_discount.purchase.order.form</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
        <field name="is_different_cost" invisible="1"/>
        <field name="last_cost" string="Compra Ant." attrs="{'invisible': [('is_different_cost', '=', False)]}" style="background-color:#f5d3d3;"/>
        <field name="last_cost" string="Compra Ant." attrs="{'invisible': [('is_different_cost', '=', True)]}" style="background-color:#ecffeb;"/>
      </xpath>
      <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
      <field name="is_different_cost" invisible="1"/>
        <field name="last_cost" string="Compra Ant." style="background-color:#f5d3d3;"/>
      </xpath>
    </field>
  </record>

</odoo>
