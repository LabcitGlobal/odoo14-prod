<odoo>
  <data>
    
    <record id="res_country_municipalities_form_view" model="ir.ui.view">
        <field name="name">res.country.municipalities.form</field>
        <field name="model">res.country.municipalities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="province_id"/>                            
                            <field name="name"/>                 
                            <field name="code"/>           
                        </group>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_country_municipalities_tree_view" model="ir.ui.view">
        <field name="name">res.country.municipalities.tree</field>
        <field name="model">res.country.municipalities</field>
        <field name="arch" type="xml">
            <tree>
                <field name="province_id"/>
                <field name="name"/>
                <field name="code"/>                
            </tree>
        </field>
    </record>


    <record id="res_country_municipalities_action" model="ir.actions.act_window">
        <field name="name">Municipalities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.municipalities</field>        
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
        
  </data>
</odoo>