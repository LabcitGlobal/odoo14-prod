<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Product.Template -->
        <record model="ir.ui.view" id="product_form_hide_purchase_page">
            <field name="name">product.template.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">                
                <xpath expr="//page[@name='purchase']" position="attributes">
                   <attribute name="groups">hide_purchase_page.view_purchase_page</attribute>
                </xpath>
            </field>
        </record>

        <!-- Product.Product -->                
        <record model="ir.ui.view" id="product_product_form_hide_purchase_page">
            <field name="name">product.product.cost</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">                
                <xpath expr="//page[@name='purchase']" position="attributes">
                   <attribute name="groups">hide_purchase_page.view_purchase_page</attribute>
                </xpath>
            </field>
        </record>

    </data>

</odoo>
