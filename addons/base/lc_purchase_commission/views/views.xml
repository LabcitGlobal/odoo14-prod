<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="view_purchase_order_commission_form">
      <field name="name">purchase.order.commission.form</field>      
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">      		
      		<xpath expr="//page[@name='products']" position="after">            	
            <page string="Supplier Commission" name="supplier_margin_commission" groups="purchase.group_purchase_manager">
              <group string="Supplier Margin">
            	  <field name="supplier_margin"/>
            	  <field name="supplier_margin_percentage"/>
            	  <field name="supplier_margin_commission"/>
              </group>
            </page>
          </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_order_commission_tree">      
      <field name="name">purchase.order.commission.tree</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
      <field name="arch" type="xml">      		
      		<xpath expr="//field[@name='amount_total']" position="after">            	
            	<field name="supplier_margin_commission" optional="hide" groups="purchase.group_purchase_manager"/>
          </xpath>
      </field>
    </record>  
  
</odoo>