<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Product.Template -->
        <record model="ir.ui.view" id="product_form_hide_pricelist">
            <field name="name">product.template.hide.pricelist</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">                
                 <xpath expr="//button[@name='open_pricelist_rules']" position="attributes">
                    <attribute name="groups">hide_pricelist.view_hide_pricelist</attribute>
                 </xpath>
            </field>
        </record>

        <!-- Product.Product -->
        <record model="ir.ui.view" id="product_product_form_hide_pricelist">
            <field name="name">product.product.hide.pricelist</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">                
                <xpath expr="//button[@name='open_pricelist_rules']" position="attributes">
                    <attribute name="groups">hide_pricelist.view_hide_pricelist</attribute>
                </xpath>
            </field>
        </record>

    </data>

</odoo>
