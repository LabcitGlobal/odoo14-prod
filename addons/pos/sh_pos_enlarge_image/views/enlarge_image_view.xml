<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_view_pos_config_form_inh">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//h2[last()]" position="before">
                <h2 name="enlarge">Enable Enlarge Image</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_image" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_image" />
                        </div>
                    </div>
                </div>
                <br />
                <h2 name="enable">Enable View Stock Multicompany</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_stock_multicompany" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_stock_multicompany" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
