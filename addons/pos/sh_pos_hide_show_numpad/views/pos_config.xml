<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='sh_pos_hide_show_numpad_config' model='ir.ui.view'>
        <field name='name'>sh.pos.hide.show.numpad.config</field>
        <field name='model'>pos.config</field>
        <field name='inherit_id' ref='point_of_sale.pos_config_view_form' />
        <field type='xml' name='arch'>
            <xpath expr="//div[4]" position="after">
                <h2>Hide/Show Numpad</h2>
                <div class="row o_settings_container">
                    <div class="col-md-6 col-lg-6 col-xl-6 col-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_numpad" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_numpad"></label>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
