<odoo>
    <data>
        <template id="print_lc_pos_session_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">                    
                    <h2 class="text-center">HOJA DE RUTA</h2>                    
                    <h3 class="text-center"><span t-esc="form.get('employee')"/></h3>                    
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                 <td width='15%' style="font-weight:bold;">
                                 	Chofer: 
                                 </td>
                                 <td>
                                 	<span t-esc="form.get('delivery_user')"/>
                                 </td>
                                 <td width='15%' style="font-weight:bold;">
                                 	Alistador:
                                 </td>
                                 <td>
                                 	
                                 </td>
                                 <td class="table-success" width='12%' style="font-weight:bold;">
                                 	Monto Total: 
                                 </td>
                                 <td width='8%'>
                                 	<span t-esc="form.get('total_amount')"/>
                                 </td>
                            </tr>
                            <tr>
                                 <td style="font-weight:bold;">
                                 	Desde: 
                                 </td>
                                 <td>
                                 	<span t-esc="form.get('from_date')"/>
                                 </td>
                                 <td style="font-weight:bold;">
                                 	Hasta:
                                 </td>
                                 <td>
                                 	<span t-esc="form.get('to_date')"/>
                                 </td>
                                 <td class="table-info" style="font-weight:bold;">
                                 	Total listas:
                                 </td>
                                 <td>
                                 	<span t-esc="form.get('total_lists')"/>
                                 </td>
                            </tr>                                                        
                        </tbody>
                    </table>

                    <table class="table table-sm">
                        <thead>
                            <tr>                     
                                <th width='30%' class="text-center">
                                    <strong>Cliente</strong>
                                </th>                                
                                <th width='10%' class="text-center">
                                    <strong>Total</strong>
                                </th>
                                <th width='10%' class="text-center">
                                    <strong>Cobrado</strong>
                                </th>              
                                <th class="text-center">
                                    <strong>Observacion</strong>
                                </th>                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="form.get('orders')" t-as="l">
                                <td>
                                    <span t-esc="l.get('partner_name')"/> <br />[<strong><span t-esc="l.get('partner_phone')"/> <span t-esc="l.get('partner_mobile')"/></strong>]
                                </td>                                                                
                                <td>
                                    <span t-esc="l.get('amount_total')"/>
                                </td>
                                <td>
                                    
                                </td>
                                <td>
                                    
                                </td>                                
                            </tr>
                        </tbody>                        
                    </table>
                    <div class="footer">
        				<div class="text-center" style="border-top: 1px solid black;">        
							<ul class="list-inline">
                				<li>Página: <span class="page"/>/<span class="topage"/></li>
                				<li>Teléfonos: <span t-field="res_company.phone"/><t t-if="res_company.website"> - Web: <span t-field="res_company.website"/></t></li>
            				</ul>
        				</div>
    				</div>
                </t>
            </t>
        </template>
    </data>
</odoo>