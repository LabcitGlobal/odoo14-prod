<odoo>
  <data>
    <!-- MARKETPLACE B2B -->
    <record model="ir.ui.view" id="marketplace_b2b_view">
      <field name="name">marketplace.b2b.tree</field>
      <field name="model">marketplace.b2b</field>
      <field name="arch" type="xml">
        <tree>          
          <field name="name"/>          
        </tree>
      </field>
    </record>
    
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="marketplace_b2b_change_action_window">
      <field name="name">Marketplace B2B</field>
      <field name="res_model">marketplace.b2b</field>
      <field name="view_mode">tree</field>
      <!-- <field name="domain">[('company_id','=',allowed_company_ids[0])]</field> -->
    </record>

    <!-- Menu -->
    
    <menuitem name="Marketplace" id="lc_marketplace_b2b.menu_root" web_icon="lc_marketplace_b2b,static/description/marketplace.png"/>
    <menuitem id="lc_marketplace_b2b_menu" parent="lc_marketplace_b2b.menu_root" action="marketplace_b2b_change_action_window" sequence="9"/>
    
    <!-- <menuitem name="Investors" id="marketplace_b2b.submenu" parent="marketplace.menu_root" sequence="1"/>    
    
    <menuitem name="Invertors" id="marketplace_b2b.change" parent="marketplace_b2b.submenu"
              action="marketplace_b2b_change_action_window" sequence="2"/> -->
    
  </data>
</odoo>