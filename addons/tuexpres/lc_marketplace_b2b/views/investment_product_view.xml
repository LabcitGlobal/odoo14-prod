<odoo>
  <data>

    <record id="lc_investment_product_view_tree" model="ir.ui.view">
      <field name="name">Investment Product tree</field>
      <field name="model">lc.investment.product.view</field>      
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="quantity"/>              
              <field name="cost"/>              
              <field name="investment"/>                            
          </tree>
      </field>
    </record>

    <record id='lc_investment_product_action' model='ir.actions.act_window'>
      <field name="name">Inventory</field>
      <field name="res_model">lc.investment.product.view</field>      
      <field name="view_mode">tree</field>
      <!-- <field name="domain">[('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field> -->
    </record>

  </data>  
