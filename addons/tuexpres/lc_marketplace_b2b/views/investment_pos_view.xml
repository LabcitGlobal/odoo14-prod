<odoo>
  <data>

    <record id="lc_investment_pos_view_tree" model="ir.ui.view">
      <field name="name">Investment POS tree</field>
      <field name="model">lc.investment.pos.view</field>      
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="create_date"/>
              <field name="price_unit"/>              
              <field name="purchase_price"/>              
              <field name="qty"/>              
              <field name="price_subtotal"/>              
              <field name="margin"/>              
              <field name="commission"/>              
              <field name="investment"/>              
          </tree>
      </field>
    </record>

    <record id='lc_investment_pos_action' model='ir.actions.act_window'>
      <field name="name">Sale in Point of Sale</field>
      <field name="res_model">lc.investment.pos.view</field>      
      <field name="view_mode">tree</field>
      <!-- <field name="domain">[('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field> -->
    </record>

  </data>  
  <menuitem id="lc_investment_menu" name="POS Agent" 
            parent="lc_marketplace_b2b.menu_root" 
            sequence="1"/>

  <menuitem id="lc_investment_pos_menu" name="Point of Sale" 
            parent="lc_marketplace_b2b.lc_investment_menu" 
            action="lc_investment_pos_action" 
            groups="lc_marketplace_b2b.group_user" sequence="2"/>
</odoo>