<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<template id="print_consignment_report_template">
			<t t-foreach="docs" t-as="o">
    			<t t-call="web.html_container">        		
            		<t t-call="web.external_layout">
                		<div class="page">
                			<div class="oe_structure" style="font:14px Helvetica,Arial !important; ">
                				<a2>                    		
                    			<div class="table">
                    				<div class="col-xs-12 text-center">
                        				<!-- <h2 t-esc="o.company_id.name"/> -->
                        				<h2>Consignment Ticket</h2>
                        				<!-- <div t-field="o.partner_id"
                            				t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": true, "phone_icons": true}'/>-->
                        				<a1><strong>Owner:</strong> <span t-field="o.partner_id"/></a1><br/>                        				
                        				<a1><strong>Reception Manager:</strong> Ivan Manolo Carvajal Antiñapa</a1><br/>                        				
                        				<a1><strong>Date:</strong> <span t-field="o.date_order"/></a1><br/>                        				
                        				<a1><strong>Code:</strong> <span t-field="o.name"/></a1>
                    				</div>
                				</div>
                				<div class="row">
                				</div>
                				<table class="table table-sm o_main_table">
                    				<thead>
                        				<tr>
                            				<th style="width:10%" class="text-right">Qty.</th>
	                            			<th style="width:70%">Description</th>             
    	                        			<th class="text-right">Price</th>
        	                    			<th class="text-right">Total</th>
            	            			</tr>
                	    			</thead>
                    				<tbody>
                        				<tr t-foreach="o.order_line" t-as="line">                        					
                        					<td class="text-right">
                                				<t t-if="o.state != 'cancel'">
                                    				<span t-field="line.product_uom_qty"/>
                                    				<!-- <span t-field="line.product_uom"/> -->
                                				</t>
	                            			</td>
    	                        			<td><span t-field="line.product_id"/>
        	                    				<!-- <t t-if="line.line_note">
            	                					[<strong>Nota:<span t-field="line.line_note"/></strong>]
                	            				</t> -->
                    	        			</td>
                        	    			<td class="text-right">
                            					<!-- <span t-esc="'%.2f'%line['price_unit']" /> -->
												<span t-field="line.price_unit"/>
                            				</td>
                            				<td class="text-right">
                            					<!-- <span t-esc="'%.2f'%(line.price_subtotal)" />                                			 -->
												<span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
	                            			</td>
    	                    			</tr>
        	            			</tbody>                    			
            	    			</table>
                				<div class="table table-sm o_main_table">
                    				<div class="col-xs-12 pull-right">
                        				<table class="table table-condensed">                            				
    	                        			<tr>
        	                        			<td><strong>Total</strong></td>
            	                    			<td class="text-right">                                				
                	                    			<!--<strong t-esc="int(o.amount_total)"/>-->
                    	                			<strong t-esc="'%.2f'%(o.amount_total)"/>                                    			
                        	        			</td>
                            				</tr>                            				
                        				</table>                        				
                    				</div>
                				</div>                				
                			</a2>
							<!-- <br/>
							<br/>
							<br/> 
							<div>
								<span style="text-align: justify;">
